@model TaskManager.Domain.Entities.TaskItem
@{
	ViewData["Title"] = "Delete Task";
}
<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
	<strong>Are you sure you want to delete this task?</strong>
</div>
<div class="mb-3">
	<p><strong>Title:</strong>@Model.Title</p>
	<p><strong>Due Date:</strong>@Model.DueDate.ToShortDateString()</p>
	<p><strong>Priority:</strong>@Model.Priority</p>
	<p><strong>Completed:</strong>@(Model.IsCompleted ? "Yes" : "No")</p>
</div>
<form asp-action="DeleteConfirmed" method="post">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

