@model IEnumerable<TaskManager.Domain.Entities.TaskItem>
<h2>Task List</h2>
<a class="btn btn-primary" asp-action="Create">Create New Task</a>
<table class="table table-bordered mt-3">
<thead>
	<tr>
		<th>Title</th>
		<th>Due Date</th>
		<th>Priority</th>
		<th>Completed</th>
		<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var task in Model)
		{
			<tr>
				<td>@task.Title</td>
				<td>@task.DueDate.ToShortTimeString()</td>
				<td>@task.Priority</td>
				<td>@(task.IsCompleted ? "Yes" : "No")</td>
				<td>
					<a class="btn btn-primary" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
			</tr>
		}
	</tbody>

</table>